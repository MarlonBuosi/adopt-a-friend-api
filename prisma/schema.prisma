generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Org {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  phone     String
  Pet       Pet[]

  @@map("orgs")
}

model Pet {
  id        String   @id @default(uuid())
  name      String
  species   String
  color     String
  weight    Float?
  height    Float?
  age       Int?
  orgId     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  city      String

  org Org @relation(fields: [orgId], references: [id])

  @@index([orgId], name: "idx_pets_org_id")
  @@map("pets")
}
